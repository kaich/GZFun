<section class="update-activity-form">
  <div class="container">
    <div class="col-lg-12">
      <%= form_for @activity do |f| %>
          <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class:"form-control" %>
          </div>     

          <div class="form-groupe">
              <%= f.label :cover %>
              <%= f.file_field :cover %>  
          </div>


          <div class="form-group">
              <%= f.label :start_time %>
              <div class="input-group datetimepicker">
              <%= f.text_field :start_time,class:"form-control"%>
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
          </div>

          <div class="form-group">
              <%= f.label :end_time %>
              <div class="input-group datetimepicker">
                  <%= f.text_field :end_time,class:"form-control"%>
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
          </div>
          
          <div class="form-group">
             <%= f.label :rule %> 
             <%= f.text_area :rule, class:"form-control" ,"data-provide" => "markdown" , "rows" => "5" %>
          </div>

          <div class="form-group">
             <%= f.label :information %> 
             <%= f.text_area :information, class:"form-control" ,"data-provide" => "markdown" , "rows" => "10" %>
          </div>

          <%= f.submit t(:update), :disable_with => t(:submiting) ,class:"btn btn-primary" %>

      <% end %>
    </div>
  </div>
</section>
</section>
