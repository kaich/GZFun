comment_box = $("#comment_box")
new_comment = '<%= j(render 'shared/comment', comment: @comment) %>'
comment_form = $('#new_comment')
<% if @comment %>
  comment_box.append(new_comment) 
  $('textarea',comment_form).data('markdown').setContent("") 
  $('textarea',comment_form).css({'height':$('textarea',comment_form)[0].original_height})
<% else %>
  $('textarea',comment_form).focus() 
<% end %>
